{
  "name": "@assistant-ui/styles",
  "description": "Styles for @assistant-ui/react for non-Tailwind users",
  "version": "0.2.8",
  "license": "MIT",
  "exports": {
    "./*": {
      "default": "./dist/styles/*"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "src/styles/index.css"
  },
  "scripts": {
    "build": "tsx scripts/build.mts",
    "lint": "eslint .",
    "sync-styles": "tsx scripts/sync-styles.mts",
    "sync-styles:dry-run": "tsx scripts/sync-styles.mts --dry-run"
  },
  "devDependencies": {
    "@assistant-ui/x-buildutils": "workspace:*",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.10.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "postcss-prefix-selector": "^2.1.1",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://www.assistant-ui.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/assistant-ui/assistant-ui/tree/main/packages/styles"
  },
  "bugs": {
    "url": "https://github.com/assistant-ui/assistant-ui/issues"
  }
}
